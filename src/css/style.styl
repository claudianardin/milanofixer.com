@import 'nib'
@import 'rupture'
@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap');


// Rupture media query for PureCSS
rupture.scale = 0 568px 768px 1024px 1280px
rupture.scale-names = 'sm' 'md' 'lg' 'xl' 'hd'

global-reset()

.nunito
  font-family 'Nunito', sans-serif
  font-weight 400
.nunito-bold
  font-family 'Nunito', sans-serif
  font-weight 600
.center
  text-align center
  
/* Spacer */
$spacer = 5, 10, 20, 30, 40, 60, 70, 80, 100, 150, 200

for _val in $spacer
  .spacer-{ _val }
    height ( _val * 1px )
    clearfix()

html,
body
  @extends .nunito
  min-height 100%
  background #fff
  color #333
  line-height 2rem
  font-size 16px

a
  color #000
  text-decoration none
  box-shadow inset 0 -1px 0 0 #000
  transition all 0.5s ease
  &:hover
    background #000
    color #fff
    box-shadow none
    svg
      fill #fff
  
.p
  padding 40px

#header
  @extends .p
  display flex
  align-items center
  justify-content space-between
  
#cover
  height 560px
  background-image url('/img/cover.jpeg')
  background-position center
  background-attachment fixed
  background-repeat no-repeat
  background-size cover

  +below('md')
    height 450px

  +below('sm')
    height 300px

#bio,
#skills,
#contacts
  max-width 768px
  margin 0 auto

  h1, h2
    text-align center
    font-weight 600
    margin-bottom 20px
    text-transform uppercase

  h1
    font-size 28px
  h2
    font-size 24px

  .icon
    margin-right 5px

#contacts
  ul
    li
      display block
      vertical-align middle
      .icon
        margin-right 5px

.icon
  display inline-block
  width 16px
  height 16px
  background-size cover
  background-position center
  background-repeat no-repeat

.envelope
  background-image url('/img/envelope.svg')
.facebook
  background-image url('/img/facebook.svg')
.instagram
  background-image url('/img/instagram.svg')
.mobile
  background-image url('/img/mobile.svg')