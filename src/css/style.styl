@import 'nib'
@import 'rupture'
@import url('//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400');


// Rupture media query for PureCSS
rupture.scale = 0 568px 768px 1024px 1280px
rupture.scale-names = 'sm' 'md' 'lg' 'xl' 'hd'

global-reset()

.source-sans
  font-family 'Source Sans Pro', sans-serif
  font-weight 400
.source-sans-light
  font-family 'Source Sans Pro', sans-serif
  font-weight 300
  
  
/* Spacer */
$spacer = 5, 10, 20, 30, 40, 60, 70, 80, 100, 150, 200

for _val in $spacer
  .spacer-{ _val }
    height ( _val * 1px )
    clearfix()

html,
body
  min-height 100%
  @extends .source-sans-light
  background #fff
  color #666
  line-height 1.8em

a
  color #aaa
  text-decoration none
  box-shadow inset 0 -1px 0 0 #aaa
  transition all 0.5s ease
  &:hover
    color #999
    box-shadow inset 0 -1px 0 0 #999

h1, h2, h3
  @extends .source-sans-light
h4, h5, h6
  @extends .source-sans
  
.p
  padding 20px 40px
  
.c
  max-width 560px

#head
  & > *
    display inline-block
    vertical-align middle
    margin-left 20px
    &:first-child
      margin-left 0
  img#top-logo
    border none
    width (472px / 8)
    height @width
  
ol,
ul
  list-style-type cjk-ideographic
  margin 0
  padding 0
  li
    margin-left 1.4em
    
+below('sm')
  #head
    text-align center
    & > *
      display block
      margin 0 auto 20px auto
      &:last-child
        margin-bottom 0px
    img#top-logo
      width (472px / 4)
      height auto
      max-width 100%
      margin-left auto
      margin-right auto
    h2
      @extends h1
    
body.cv-page
  
  .c
    max-width 100%

  @extends .source-sans-light
  font-size 0.9em
  line-height 1.6em
  color #000
  
  a
    color #000
    transition none
    box-shadow none
    &:hover
      color #000
      box-shadow none
      
  b, strong
    @extends .source-sans
  
  h1, h2, h3
    @extends .source-sans-light
    text-transform uppercase
  h4, h5, h6
    @extends .source-sans
    text-transform uppercase
    
  hr
    border none
    height 1.4em
    
  ol,
  ul
    list-style-type none
    
  blockquote
    margin 0
    padding 0
    font-size 0.8em