@import 'nib'
@import 'rupture'
@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap');


// Rupture media query for PureCSS
rupture.scale = 0 568px 768px 1024px 1280px
rupture.scale-names = 'sm' 'md' 'lg' 'xl' 'hd'

global-reset()

.nunito
  font-family 'Nunito', sans-serif
  font-weight 400
.nunito-bold
  font-family 'Nunito', sans-serif
  font-weight 600
.center
  text-align center
  
/* Spacer */
$spacer = 5, 10, 20, 30, 40, 60, 70, 80, 100, 150, 200

for _val in $spacer
  .spacer-{ _val }
    height ( _val * 1px )
    clearfix()

html,
body
  @extends .nunito
  min-height 100%
  background #fff
  color #000
  line-height 2rem
  font-size 16px

a
  color #000
  text-decoration none
  box-shadow inset 0 -1px 0 0 #000
  &.no-underline
    box-shadow none

span.icon
  display inline-block
  width 16px
  height 16px
  background-size cover
  background-position center
  background-repeat no-repeat

.envelope
  background-image url('/img/envelope.svg')
.facebook
  background-image url('/img/facebook.svg')
.instagram
  background-image url('/img/instagram.svg')
.mobile
  background-image url('/img/mobile.svg')
.worldfixer
  width 108.5px
  height auto
  display inline-block

.p
  padding 40px

#header
  padding 20px 10px
  box-sizing border-box
  max-width 768px
  margin 0 auto
  display flex
  align-items center
  justify-content space-between
  line-height 100%

  .logo
    display flex
    align-items center
    h1
      font-size 24px
      margin-left 10px
  
  .links
    display flex
    align-items center
    & > *
      display block
      & + *
        margin-left 10px
    span.label
      display none
    span.icon
      width 20px
      height 20px

  #logo
    min-width 80px
    width 80px
    height auto

  +below('md')
    padding 20px

  +below('sm')
    h1
      display none

  
#cover
  height 560px
  background-image url('/img/cover.jpeg')
  background-position center
  background-repeat no-repeat
  background-size cover

  +below('md')
    height 450px

  +below('sm')
    height 300px

#bio,
#skills,
#contacts
  max-width 768px
  margin 0 auto

  h1, h2
    text-align center
    font-weight 600
    margin-bottom 20px
    text-transform uppercase

  h1
    font-size 28px
  h2
    font-size 20px

  .icon
    margin-right 5px

#contacts
  ul
    li
      display block
      vertical-align middle
      .icon
        margin-right 5px
